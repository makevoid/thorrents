= haml :"_search"

#results
  %ul
    - @results.map do |result|
      %li 
        - unless result[:name].urlize == @result
          .res
            - link_to "<span class='seeds'>#{result[:seeds]}</span><span class='name'>#{result[:name]}</span>", result[:magnet]
        - else
          .res.shared
            - link_to "<span class='seeds'>#{result[:seeds]}</span><span class='name'>#{result[:name]}</span>", result[:magnet]
          .fb_share
            - url = "http://thorrents.com/search/#{@query}/#{@result}"
            :plain
              <fb:like href='#{url}' layout='button_count' show_faces='false' width='100' font='lucida grande'></fb:like>
  .clear
