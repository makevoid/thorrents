!!! Strict
%html{ html_attrs("en_EN") }
  %head
    %title Thorrents
    %link{ href: "/css/main.css", rel: "stylesheet" }
    %meta{ charset: "utf-8" }
    %meta{ :"http-equiv" => "X-UA-Compatible", content: "IE=edge,chrome=1" }
    %meta{ name: "description", content: "" }
    %meta{ name: "keywords", content: "" }    
    %meta{ name: "author", content: "" }    
    -# %meta{ name: "viewport", content: "width=device-width, initial-scale=1.0" }
    %script{ src: "/js/modernizr.js", type: "text/javascript" }

  %body
    #container
      %header
        %h1 
          Thorrents
          %span Take the torrent power back! Smash old fashioned HTTP downloaders! Thor agrees!
      %nav
      #content
        = yield
      %footer
    %script{ src: "/js/jquery.js", type: "text/javascript" }
    %script{ src: "/js/moustache.js", type: "text/javascript" }
    %script{ src: "/js/main.js", type: "text/javascript" }
    %script{ type: "text/javascript" }
      var rack_env = "#{ENV["RACK_ENV"]}"
    = yield_content :head
    %script{ type: "text/javascript" }
      $(function(){
      = yield_content :jquery
      });
    %script#result_tmpl{ type: "text/x-moustache-tmpl" }
      :plain
        <ul>  
          <li class='heading'><span>Seeds</span></li>
          {{#results}}                                                           
            <li><a href='{{magnet}}'><span>{{seeds}}</span>{{name}}</a></li>   
          {{/results}}                                                           
          {{^results}}<li class='no_results'>No thorrents found. Thor is angry!</li>{{/results}}           
        </ul>